# Test environment file demonstrating environment-based test user creation
# Copy this file to .env to test the new functionality

# Database connection string
DATABASE_URL=postgresql://dbuser:dbpassword@localhost/ilma_db

# JWT Secret
JWT_SECRET=this_is_a_secure_test_secret_with_more_than_32_characters_for_testing_purposes

# Server bind address
BIND_ADDRESS=127.0.0.1:8000

# Logging level
RUST_LOG=info

# Rate limiting configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# TESTING MODE CONFIGURATION
TESTING_MODE=true

# Main test user
TEST_USERNAME=main_test_user
TEST_EMAIL=main.test@example.com
TEST_PASSWORD=main_test_password_123

# Additional test users
TEST_USER_1_USERNAME=student_test_user
TEST_USER_1_EMAIL=student.test@example.com
TEST_USER_1_PASSWORD=student_test_password_123
TEST_USER_1_ROLE=student

TEST_USER_2_USERNAME=teacher_test_user
TEST_USER_2_EMAIL=teacher.test@example.com
TEST_USER_2_PASSWORD=teacher_test_password_123
TEST_USER_2_ROLE=teacher

TEST_USER_3_USERNAME=admin_test_user
TEST_USER_3_EMAIL=admin.test@example.com
TEST_USER_3_PASSWORD=admin_test_password_123
TEST_USER_3_ROLE=admin

# Testing mode features
TEST_SKIP_RATE_LIMITS=true
TEST_VERBOSE_LOGGING=true
TEST_MOCK_EXTERNAL_SERVICES=true

# Security warning: Only for development/testing environments!
